generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  User_id        String   @id @default(cuid())
  User_email     String   @unique
  User_fname      String?
  User_lname      String?
  role           String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model officialdocument {
  D_id        String   @id @default(cuid())
  D_date      DateTime
  D_from      String
  D_story     String
  D_time      String
}

model officialletter {
  L_id        String   @id @default(cuid())
  L_date      DateTime
  L_from      String
  L_story     String
  L_time      String  
}

model postnotice{
  P_number         String   @id @default(cuid())
  P_institute Int
  P_id        String
  P_date1     DateTime
  P_story   String
  P_website  String
  P_date2   DateTime
  P_time    String
  P_endorser String
  P_comment  String
}